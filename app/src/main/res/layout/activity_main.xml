<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.lenve.a2_2asynctaskweather.MainActivity">

    <!--先写按钮，因为相对布局是，先写的会先画，后写的那些拿到的画面大小是有限的，相对布局，match 是只能拿到剩余的空间-->


        <Button
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
            android:text="查询"
        android:textSize="32sp"
        android:textColor="@android:color/holo_red_dark"
        android:onClick="search_weather"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_cityname"
        android:layout_width="match_parent"
        android:textSize="32sp"
        android:layout_toLeftOf="@id/btn_search"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:textSize="36sp"
        android:layout_below="@id/et_cityname"
        android:layout_height="wrap_content" />

    </RelativeLayout>




